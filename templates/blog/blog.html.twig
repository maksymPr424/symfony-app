{% extends '/base.html.twig' %}
{% block content %}

<h1>This is your blog!</h1>
<form action="{{ path('blog_add') }}" method="POST">
    <label for="id">Enter number:</label>
    <input type="number" id="id" name="id" min="1" max="1000" required>
    <button type="submit">Go to blog</button>
</form>

{% endblock %}